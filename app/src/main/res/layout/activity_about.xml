<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/primary"
              android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/ic_drawer"/>

        <widgets.LatinTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <widgets.LatinTextView
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="version 1.0"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:background="@android:drawable/divider_horizontal_bright"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <widgets.MyButton
            android:id="@+id/btnShare"
            style="@style/BorderlessButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_ok"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_share_white"
            android:padding="5dp"
            android:text="share"
            android:textColor="@color/white"/>

        <widgets.MyButton
            android:id="@+id/btnFeedback"
            style="@style/BorderlessButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_ok"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_feedback_white"
            android:padding="5dp"
            android:text="feedback"
            android:textColor="@color/white"/>

        <widgets.MyButton
            android:id="@+id/btnRate"
            style="@style/BorderlessButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_ok"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_rate_white"
            android:onClick="btnRateOnClick"
            android:padding="5dp"
            android:text="rate"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:background="@android:drawable/divider_horizontal_bright"/>-->

    <!--<TableLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal">-->
    <!--</TableLayout>-->

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:background="@android:drawable/divider_horizontal_bright"/>-->

    <LinearLayout
        android:id="@+id/layoutWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/btn_dialog_ok"
        style="@style/BorderlessButton"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_zohal_tech"/>

            <widgets.LatinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.zohaltech.com"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"/>

            <widgets.LatinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@zohaltech.com"
                android:textColor="@color/white"/>

            <widgets.LatinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copyright"
                android:textColor="@color/white"/>

            <widgets.LatinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_rights"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>