<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <widgets.MyButton
        android:id="@+id/btnSpeechUS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="US"/>

    <widgets.MyButton
        android:id="@+id/btnSpeechUK"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="UK"/>


    <widgets.LatinTextView
        android:id="@+id/txtVocabulary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_lighter"
        android:gravity="start|center"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary"/>

    <widgets.LatinTextView
        android:id="@+id/txtVocabEnglishDefinition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="start|center"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_text"/>

    <widgets.MyTextView
        android:id="@+id/txtVocabPersianMeaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="start|center"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_text"/>

</LinearLayout>